# Carfify Environment Configuration
# Phase 1.2 - Environment Variables
# Copy this file to .env and update values

# Application
APP_NAME=Carfify
APP_ENV=development
APP_DEBUG=true
APP_URL=https://carfify.de

# Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=carfify
DB_USER=root
DB_PASS=

# API Configuration
API_BASE_URL=https://carfify.de/api
CORS_ORIGINS=https://carfify.de,https://www.carfify.de

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ENCRYPTION_KEY=your-32-character-encryption-key

# External APIs
MOBILE_DE_API_KEY=your-mobile-de-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
OPENWEATHER_API_KEY=your-openweather-api-key

# Email Configuration
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@carfify.de
MAIL_FROM_NAME=Carfify

# Cache
CACHE_DRIVER=file
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=debug

# Upload
UPLOAD_MAX_SIZE=5242880
UPLOAD_PATH=/var/www/carfify/uploads/

# Feature Flags
FEATURE_MAINTENANCE=false
FEATURE_PARTS=false
FEATURE_REVIEWS=false
FEATURE_FORUM=false
FEATURE_INSURANCE=false
FEATURE_TUV=false

# Development
DEV_MODE=true
DEBUG_BAR=false
PROFILER=false