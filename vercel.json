{
  "version": 2,

  /* Wir bauen nur **eine** Haupt-PHP-Funktion. */
  "functions": {
    "frontend/index.php": { "runtime": "vercel-php@0.6.1" }
  },

  /* Diese Regel leitet ALLE Anfragen unverz√ºglich an das Front-End weiter. */
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/frontend/index.php"
    }
  ],
  
  /* Umwelt-Parameter bleiben optional. */
  "env": {
    "PHP_VERSION": "8.1"
  }
}
