{
  "version": 2,
  "builds": [
    { "src": "backend/api/**/*.php", "use": "vercel-php@0.6.1" },
    { "src": "import_kba.php", "use": "vercel-php@0.6.1" },
    { "src": "frontend/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/api/$1" },
    { "src": "/import", "dest": "/import_kba.php" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ]
}