{
    "name": "carfify/carfify-app",
    "description": "Carfify - Vehicle Analysis and Management System",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Carfify Team",
            "email": "team@carfify.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "guzzlehttp/guzzle": "^7.0",
        "google/cloud-vision": "^1.6",
        "monolog/monolog": "^2.0",
        "vlucas/phpdotenv": "^5.4",
        "phpmailer/phpmailer": "^6.6",
        "intervention/image": "^2.7",
        "league/csv": "^9.8",
        "ramsey/uuid": "^4.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Carfify\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Carfify\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"if (!file_exists('.env')) { copy('.env.example', '.env'); }\""
        ],
        "test": "phpunit",
        "cs": "phpcs --standard=PSR12 src/",
        "cs-fix": "phpcbf --standard=PSR12 src/"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}